{
    "name": "@gbt/homebridge",
    "version": "0.0.1",
    "description": "Homebridge Docker Idk",
    "private": false,
    "type": "module",
    "scripts": {
        "\n========== UI >> ==========": "",
        "ui": "pnpm docker:daemon && open http://192.168.64.2:8581",
        "\n========== DOCKER >> ==========": "",
        "docker:start": "pnpm docker start",
        "docker:stop": "pnpm docker stop",
        "docker:install": "pnpm hack:homebridge && pnpm docker up -d",
        "docker": "pnpm exec docker compose",
        "docker:daemon": "open /Applications/Docker.app",
        "docker:sh": "pnpm exec docker exec -it homebridge ",
        "sh": "pnpm run docker:sh",
        "\n========== HOMEBRIDGE >> ==========": "",
        "hb": "pnpm exec sudo hb-service",
        "hb:start": "pnpm hb start",
        "hb:stop": "pnpm hb stop",
        "hb:install": "pnpm hb install",
        "hb:uninstall": "pnpm hb uninstall",
        "\n========== LIFECYCLE >> ==========": "",
        "postinstall": "pnpm docker:daemon",
        "hostname": "pnpm docker:sh hostname -I",
        "hack:homebridge": "rm -R -f api/homebridge/node_modules && echo '=== >> PNPM Hack Success:: node_modules directory deleted (homebridge uses npm)'"
    },
    "devDependencies": {
        "@0x5e/homebridge-tuya-platform": "1.7.0-beta.54",
        "@milo526/homebridge-tuya-web": "^1.1.5",
        "homebridge": "2.0.0-beta.22",
        "homebridge-config-ui-x": "^4.61.0",
        "homebridge-dummy": "^0.9.0"
    },
    "engines": {
        "node": ">=18.7.0",
        "pnpm": ">=9.0.0",
        "docker": ">=28.2.0"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "homepage": "https://github.com/gbtunney/gbt-boilerplate",
    "repository": {
        "type": "git",
        "url": "https://github.com/gbtunney/gbt-boilerplate"
    }
}
