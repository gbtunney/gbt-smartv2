{
    "name": "@gbt/node-red-contrib",
    "version": "0.0.0",
    "private": false,
    "description": "Custom Node Development for Node-RED",
    "node-red": {
        "nodes": {
            "lower-case": "./dist/nodes/lower-case/lower-case.cjs",
            "atc-graph": "./dist/nodes/atc-graph/atc-graph.cjs"
        }
    },
    "scripts": {
        "\n========== DEVELOPMENT >> ==========": "",
        "dev": "pnpm build:ts --watch",
        "dev:ts": "pnpm build:ts --watch",
        "dev:rollup": "rollup --watch --config ./rollup.config.js",
        "dev:vite": "pnpm exec vite --config ./vite.config.ts",
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup && pnpm build:rollup:editor && pnpm build:copy",
        "build:ts": "pnpm exec tsc --build",
        "build:rollup": "rollup --config ./rollup.nodes.config.js",
        "build:rollup:editor": "rollup --config ./rollup.editor.config.js",
        "build:vite": "pnpm exec vite build --config ./vite.editor.config.ts",
        "build:copy": "pnpm exec copyfiles -u 2 ./src/nodes/**/*.{png ,svg} ./dist/nodes/",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "pnpm exec tsc --build --clean",
        "clean:build": "pnpm exec rm -rf ./dist ./types",
        "\n========== TEST >> ==========": "",
        "test": "echo '\"\\n===\\n>> Unit Test:: no test specified!'",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm run prerelease",
        "prerelease": "pnpm run build && pnpm run fix && pnpm run check && pnpm test",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "cross-var prettier ./.husky/* --ignore-path ./.gitignore --no-error-on-unmatched-pattern {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --config $(git rev-parse --show-toplevel)/$npm_package_config_prettier_config",
        "lint": "cross-var eslint -c $(git rev-parse --show-toplevel)/$npm_package_config_eslint_config",
        "lint:md": "pnpm exec markdownlint-cli2 '{./*,./**/*}.md' '#**/node_modules/**' '#packages/test-package/**/*' ",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm check:self",
        "check:md": "pnpm run lint:md",
        "check:self": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm fix:self",
        "fix:md": "pnpm run lint:md --fix",
        "fix:self": "pnpm prettier --write && pnpm lint --fix"
    },
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.mjs",
    "commonjs": "./dist/index.cjs",
    "keywords": [
        "boilerplate"
    ],
    "files": [
        "types",
        "dist",
        "CHANGELOG.md"
    ],
    "devDependencies": {
        "@snailicide/build-config": "^1.3.0",
        "@snailicide/g-library": "^1.1.0",
        "@tuyapi/cli": "^1.18.3",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.7.3",
        "@types/node-red": "^1.3.5",
        "@types/ramda": "^0.30.2",
        "copyfiles": "^2.4.1",
        "cross-var": "^1.1.0",
        "eslint": "^9.11.1",
        "glob": "^11.0.0",
        "node-red": "^4.0.3",
        "prettier": "^3.3.3",
        "ramda": "^0.30.1",
        "ramda-adjunct": "^5.1.0",
        "rollup": "^4.22.5",
        "rollup-plugin-bundle-inject": "^1.0.3",
        "type-fest": "^4.26.1",
        "typescript": "^5.4.5",
        "vitest": "^2.1.1"
    },
    "engines": {
        "node": ">=18.7.0",
        "pnpm": ">=9.0.0"
    },
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "homepage": "https://github.com/gbtunney/gbt-boilerplate",
    "repository": {
        "type": "git",
        "url": "https://github.com/gbtunney/gbt-boilerplate"
    },
    "config": {
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,mts,sh,html,json,yaml,yml,graphql,md",
            "path": "*,**/*",
            "config": "prettier.config.js"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*",
            "config": "eslint.config.js"
        },
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "zod": "^3.23.8"
    }
}
